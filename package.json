{
  "name": "mern_start",
  "version": "1.0.0",
  "description": "Starter kit for creating MERN stack app",
  "main": "server.js",
  "scripts": {
    "package": "npm install && cd client && npm install",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "prod": "npm run build --prefix client && pm2 restart server"
  },
  "author": "Povetkin Dmitriy",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^4.1.1",
    "connect-multiparty": "^2.2.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "joi": "^17.4.2",
    "joi-objectid": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.29.1",
    "mongoose": "^6.0.5",
    "nodemailer": "^6.6.3",
    "nodemon": "^1.19.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0"
  }
}
